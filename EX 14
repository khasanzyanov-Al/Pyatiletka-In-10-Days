#1 прототип с цифарами
s = 9**8 + 3**24 - 3*7
cnt2 = 0
while s > 0:
    if s % 3 == 2:
        cnt2 += 1
    s //= 3
print(cnt2)

#2 прототип с буковами
for x in "0123456789ABCD":
    s = int(f"AB31{x}", 14) + int(f"213{x}CA", 14)
    if s % 13 == 0:
        print(s / 13)

#3 случай, когда система счисления больле 36 (Вручную):
for x in range(37):
    s = (1 * 37**4 + 7* 37**3 + 2*37**2 + 1*37 + x*37**0)
    if s % 13 == 0:
        print(x, s//13)
